<h1>Details for <%= @user.name %></h1>
<%= form_for(@user) do |f| %>

    <%= render 'shared/error_messages', :object => f.object %>
    
    <%= render 'fields', :f => f %>

    <div class="actions">
        <%= f.submit "Save" %>
    </div>
<% end %>
<%= gravatar_for @user%>
<a href='http://gravatar.com/emails'>Change</a>
